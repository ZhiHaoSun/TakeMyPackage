<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.team7.sports.org.team7.TakeMyPackage.AssignmentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/current_assignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Tasks"
            android:textSize="35sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Package_RV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/current_assignments"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>
